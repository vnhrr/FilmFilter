<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_azul_claro">

    <Button
        android:id="@+id/btnIniciarSesionUpReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#D3EFF8"
        android:text="INICIAR SESION"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042" />

    <Button
        android:id="@+id/btnCrearSesionUpReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:backgroundTint="#D3EFF8"
        android:text="@string/crear_cuenta_sub"
        android:textColor="#5AE1ED"
        app:layout_constraintBottom_toBottomOf="@+id/btnIniciarSesionUpReg"
        app:layout_constraintStart_toEndOf="@+id/btnIniciarSesionUpReg"
        app:layout_constraintTop_toTopOf="@+id/btnIniciarSesionUpReg"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imgFilmFilter"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_marginTop="28dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="@+id/btnCrearSesionUpReg"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/btnIniciarSesionUpReg"
        app:layout_constraintTop_toBottomOf="@+id/btnIniciarSesionUpReg"
        app:srcCompat="@mipmap/film_filter_foreground" />

    <TextView
        android:id="@+id/tvNombreApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36dp"
        android:textColor="@color/black"
        android:text="Film filter"
        app:layout_constraintEnd_toEndOf="@+id/imgFilmFilter"
        app:layout_constraintStart_toStartOf="@+id/imgFilmFilter"
        app:layout_constraintTop_toBottomOf="@+id/imgFilmFilter" />

    <TextView
        android:id="@+id/tvRegistrarse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrarse"
        android:textColor="@color/black"
        android:textSize="36dp"
        app:layout_constraintEnd_toEndOf="@+id/tvNombreApp"
        app:layout_constraintStart_toStartOf="@+id/tvNombreApp"
        app:layout_constraintTop_toBottomOf="@+id/tvNombreApp" />

    <EditText
        android:id="@+id/etNombreRegistro"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:ems="10"
        android:textSize="24dp"
        android:hint="Nombre completo"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/account_icon_size"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/tvRegistrarse"
        app:layout_constraintStart_toStartOf="@+id/tvRegistrarse"
        app:layout_constraintTop_toBottomOf="@+id/tvRegistrarse" />

    <EditText
        android:id="@+id/etEmailRegistro"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/email_icon_size"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="8dp"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="@+id/etNombreRegistro"
        app:layout_constraintStart_toStartOf="@+id/etNombreRegistro"
        app:layout_constraintTop_toBottomOf="@+id/etNombreRegistro" />

    <EditText
        android:id="@+id/etPaswword1Registro"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/key_icon_size"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:padding="8dp"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="@+id/etEmailRegistro"
        app:layout_constraintStart_toStartOf="@+id/etEmailRegistro"
        app:layout_constraintTop_toBottomOf="@+id/etEmailRegistro" />

    <EditText
        android:id="@+id/etPaswword2Registro"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/key_icon_size"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="Repetir contraseña"
        android:inputType="textPassword"
        android:padding="8dp"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="@+id/etPaswword1Registro"
        app:layout_constraintStart_toStartOf="@+id/etPaswword1Registro"
        app:layout_constraintTop_toBottomOf="@+id/etPaswword1Registro" />

    <Button
        android:id="@+id/btnRegistrarseReg"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/azul_boton"
        android:text="Registrarse"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/etPaswword2Registro"
        app:layout_constraintStart_toStartOf="@+id/etPaswword2Registro"
        app:layout_constraintTop_toBottomOf="@+id/etPaswword2Registro" />

    <TextView
        android:id="@+id/tvSiCuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="¿Ya tienes una cuenta?"
        android:textColor="#777575"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/btnRegistrarseReg"
        app:layout_constraintHorizontal_bias="0.296"
        app:layout_constraintStart_toStartOf="@+id/btnRegistrarseReg"
        app:layout_constraintTop_toBottomOf="@+id/btnRegistrarseReg" />

    <Button
        android:id="@+id/btnIniciarSesionDownReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:backgroundTint="#D3EFF8"
        android:text="Iniciar sesión"
        android:textColor="@color/azul_boton"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvSiCuenta"
        app:layout_constraintStart_toEndOf="@+id/tvSiCuenta"
        app:layout_constraintTop_toTopOf="@+id/tvSiCuenta" />

</androidx.constraintlayout.widget.ConstraintLayout>