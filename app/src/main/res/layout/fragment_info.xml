<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgFilmFilterFragment"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/film_filter_foreground" />

    <TextView
        android:id="@+id/tvBienvenidoFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido a Film filter"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="@+id/imgFilmFilterFragment"
        app:layout_constraintStart_toStartOf="@+id/imgFilmFilterFragment"
        app:layout_constraintTop_toBottomOf="@+id/imgFilmFilterFragment" />

    <TextView
        android:id="@+id/tvInstruccionesFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:text="Rellena el siguiente formulario para hacer mejores recomendaciones"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="@+id/tvBienvenidoFragment"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/tvBienvenidoFragment"
        app:layout_constraintTop_toBottomOf="@+id/tvBienvenidoFragment" />

</androidx.constraintlayout.widget.ConstraintLayout>