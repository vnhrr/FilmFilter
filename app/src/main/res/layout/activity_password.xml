<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/fondo_azul_claro">

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#D3EFF8"
        android:text="VOLVER"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042" />

    <ImageView
        android:id="@+id/imgFilmFilter"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_marginTop="36dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.447"
        app:layout_constraintStart_toStartOf="@+id/btnVolver"
        app:layout_constraintTop_toBottomOf="@+id/btnVolver"
        app:srcCompat="@mipmap/film_filter_foreground" />

    <TextView
        android:id="@+id/tvNombreApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="36dp"
        android:textColor="@color/black"
        android:text="Film filter"
        app:layout_constraintEnd_toEndOf="@+id/imgFilmFilter"
        app:layout_constraintStart_toStartOf="@+id/imgFilmFilter"
        app:layout_constraintTop_toBottomOf="@+id/imgFilmFilter" />

    <TextView
        android:id="@+id/tvOlvidePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Olvidé la contraseña"
        android:textColor="#8A8A8A"
        android:textSize="36dp"
        app:layout_constraintEnd_toEndOf="@+id/tvNombreApp"
        app:layout_constraintStart_toStartOf="@+id/tvNombreApp"
        app:layout_constraintTop_toBottomOf="@+id/tvNombreApp" />

    <EditText
        android:id="@+id/etEmailPassword"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/email_icon_size"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="8dp"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="@+id/tvOlvidePassword"
        app:layout_constraintStart_toStartOf="@+id/tvOlvidePassword"
        app:layout_constraintTop_toBottomOf="@+id/tvOlvidePassword" />

    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/azul_boton"
        android:text="Enviar"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/etEmailPassword"
        app:layout_constraintStart_toStartOf="@+id/etEmailPassword"
        app:layout_constraintTop_toBottomOf="@+id/etEmailPassword" />

</androidx.constraintlayout.widget.ConstraintLayout>